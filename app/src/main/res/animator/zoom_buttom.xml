<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1.1" android:duration="20" />
            <objectAnimator android:propertyName="scaleY" android:valueTo="1.1" android:duration="20" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1.0" android:duration="20" />
            <objectAnimator android:propertyName="scaleY" android:valueTo="1.0" android:duration="20" />
        </set>
    </item>
</selector>